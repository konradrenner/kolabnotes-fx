<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.web.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40" fx:controller="org.kore.kolab.notes.fx.controller.NoteDetailController">
    <center>
        <javafx.scene.web.HTMLEditor id="noteEditor" fx:id="noteEditor" htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;" prefHeight="200.0" prefWidth="506.0" BorderPane.alignment="CENTER" />
     </center>
     <top>
        <BorderPane BorderPane.alignment="CENTER">
           <top>
              <TextField fx:id="summaryTextField" promptText="Summary" BorderPane.alignment="CENTER" />
           </top>
           <bottom>
              <BorderPane BorderPane.alignment="CENTER">
                 <right>
                    <Button mnemonicParsing="false" onAction="#editTags" text="Edit" BorderPane.alignment="CENTER" />
                 </right>
                 <center>
                    <ScrollPane vbarPolicy="NEVER" BorderPane.alignment="CENTER">
                       <content>
                          <HBox fx:id="tagBox" />
                       </content>
                    </ScrollPane>
                 </center>
              </BorderPane>
           </bottom>
        </BorderPane>
     </top>
     <bottom>
        <BorderPane BorderPane.alignment="CENTER">
           <center>
              <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <items>
                  <Button mnemonicParsing="false" onAction="#saveNote" text="Save" />
                    <ChoiceBox fx:id="noteClassificationChoiceBox" prefWidth="150.0" />
                    <ColorPicker fx:id="noteColorPicker" onAction="#changeColor" />
                </items>
              </ToolBar>
           </center>
        </BorderPane>
     </bottom>
</BorderPane>
